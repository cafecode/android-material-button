<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:colorControlHighlight">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/floating_primary_button_pressed"/>
                    <size android:height="@dimen/button_floating_width"
                        android:width="@dimen/button_floating_width"/>
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="oval">
                    <solid android:color="@color/floating_primary_button_focused"/>
                    <size android:height="@dimen/button_floating_width"
                        android:width="@dimen/button_floating_width"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <solid android:color="@color/floating_light_button_disabled"/>
                    <size android:height="@dimen/button_floating_width"
                        android:width="@dimen/button_floating_width"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/floating_primary_button_normal"/>
                    <size android:height="@dimen/button_floating_width"
                        android:width="@dimen/button_floating_width"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>